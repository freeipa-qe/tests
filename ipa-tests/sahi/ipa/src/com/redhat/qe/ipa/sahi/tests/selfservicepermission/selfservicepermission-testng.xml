<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPASelfservicepermissionTestSuite">	
    <test name="IPASelfservicepermission Tests" >
            	<packages>
            	    <package name="com.redhat.qe.ipa.sahi.*" />
            	</packages>
            	<groups>
            	    <run>
            	        <include name="setup" />
            	        <include name="init" />    
            	        <include name="addPermission" />
            	        <include name="addPermission_negative" />
            	        <include name="modifyPermission_reset" /> 
            	        <include name="modifyPermission_undo" /> 
            	        <include name="modifyPermission_update" /> 
            	        <include name="modifyPermission_negative" />
            	        <include name="deletePermission" /> 
               	    </run>
            	</groups>
            	<classes>
            	    <class name="com.redhat.qe.ipa.sahi.tests.selfservicepermission.SelfservicepermissionTests" />
            	</classes>
    </test>
    <test name="Self Service Permission Functional Tests">
		<groups>
			<run>
				<include name="init" />  
			    <include name="addUserSSHKey" />
			    <include name="resetUserSSHKeyPermission" />
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.selfservicepermission.SelfServicePermissionFunctionalTests" />
		</classes>
	</test> 
    
	
    <listeners>        
  	             <listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
    </listeners>
	
</suite>
