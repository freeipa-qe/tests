<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPAHostTestSuite">	
	<test name="Host Tests">
		<packages>
		    <package name="com.redhat.qe.ipa.sahi.*" />
		</packages>
		<groups>
			<run>
			    <include name="setup" />
			    <include name="init" />
			    <include name="invalidhostAddTests" />
				<include name="addHostTests" />
				<include name="deleteHostTests" />
				<include name="addAndEditHostTests" />
				<!--
				<include name="teardown"/>
				-->
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.host.HostTests" />
		</classes>
	</test>
	
	<listeners>        
  		<listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
	</listeners>
	
</suite>