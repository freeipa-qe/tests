		<packages>
		     <package name="com.redhat.qe.ipa.sahi.*" />
		</packages>
		<groups>
			<run>
			    <include name="setup" />
			    <include name="configSearchOptionSizeLimitTests" />	
			    <include name="configSearchOptionInvalidSizeLimitTests" />
			    <include name="configSearchOptionTimeLimitTests" />	
			    <include name="configSearchOptionInvalidTimeLimitTests" />
			    <include name="configUserOptionSearchFieldTests" />
			    <include name="configUserOptionInvalidSearchFieldTests" />
			    <include name="configUserOptionEmailTests" />
			    <include name="configUserOptionInvalidEmailTests" />
			    <include name="configUserOptionGroupTests" />
			    <include name="configUserOptionHomeDirTests" />
			    <include name="configUserOptionDefaultShell" />
			    <include name="configUserOptionInvalidDefaultShell" />
			    <include name="configPasswordPluginFeatureTests" />
			    <include name="configDefaultuserclassesTests" />
			    <include name="configDefaultGroupclassesTests" />			    
			    <include name="configUserOptionInvalidHomeDirTests" />
			    <include name="configUserOptionNameLengthTests" />
			    <include name="configUserOptionInvalidNameLengthTests" />
			    <include name="configUserOptionPwdExpNotifyTests" />
			    <include name="configUserOptionInvalidPwdExpNotifyTests" />
