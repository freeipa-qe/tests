<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPARBACTestSuite">	
	<test name="Permission Tests">
		<packages>
		     <package name="com.redhat.qe.ipa.sahi.*" />
		</packages>
		<groups>
			<run>
			    <include name="setup" />
			    <include name="permissionAddTypeTests" /> 
			    <include name="permissionAddFilterTests" />  
			    <include name="permissionAddSubtreeTests" /> 
			    <include name="permissionAddTargetgroupTests" /> 
			    <include name="permissionInvalidAddTypeTests" /> 
			    <include name="permissionBug807755Tests" /> 
			    <include name="permissionBug783500Tests" />
			    <include name="permissionRequiredFieldAddTests" />  
			    <include name="permissionMemberOfAddTests" />
			    <!-- TODO <include name="permissionMissingMemberOfAddTests" /> 	-->		    
			    <include name="permissionMultipleDeleteTests" /> 
			    <include name="permissionAddAndAddAnotherTypeTests" />
			    <include name="permissionAddAndEditTypeTests" /> 
			    <include name="permissionAddCancelFilterTests" /> 
			    <include name="permissionAddFilterUndoAttributeTests" /> 
			    <include name="permissionExpandCollapseTests" /> 
			    <include name="permissionModifyTests" /> 
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.rbac.PermissionTests" />
		</classes>
	</test>

	
	<test name="Privilege Tests">
		<groups>
			<run>	
			     <include name="privilegeAddTests" /> 
			     <include name="privilegeAddAndAddAnotherTests" /> 
			     <include name="privilegeAddAndEditTests" />
			     <include name="privilegeAddCancelTests" /> 
			     <include name="privilegeInvalidAddTests" />
			     <include name="privilegeRequiredFieldAddTests" /> 
			     <include name="privilegeMultipleDeleteTests" />
			     <include name="privilegeExpandCollapseTests" /> 
			     <include name="privilegeModifyTests" />
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.rbac.PrivilegeTests" />
		</classes>
	</test>

