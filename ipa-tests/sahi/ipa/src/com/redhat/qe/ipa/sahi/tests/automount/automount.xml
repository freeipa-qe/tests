<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPAAutomountTestSuite">	
    <test name="IPAAutomount Tests">
            	<packages>
            	    <package name="com.redhat.qe.ipa.sahi.*" />
            	</packages>
            	<groups>
            	    <run>
            	        <include name="setup" />
            	        <include name="init" />    
            	        <include name="addAutomountLocation" />
            	        <include name="addAutomountLocation_negative" />
            	        <include name="deleteAutomountLocation" />
            	        <include name="deleteAutomountLocationMultiple" />
            	        <include name="automountLocationExpandCollapseTests" />
            	       
            	        <include name="addAutomountMap" />
            	        <include name="modifyAutomountMap" />
                        <include name="deleteAutomountMap" />
                        <include name="automountMapExpandCollapseTest" />
            	        
            	        <include name="addIndirectAutomountMap" />
            	        <include name="addIndirectAutomountMap_negative" />
            	        <include name="modifyIndirectAutomountMap" />
            	        <include name="deleteIndirectAutomountMap" />
            	        
            	        <include name="addAutomountKey" />
            	        <include name="addAutomountKey_negative" />
            	        <include name="modifyAutomountKey" />
            	        <include name="modifyAutomountKey_negative" />
            	        <include name="deleteAutomountKey" /> 
            	        <include name="AutomountKeyExpandCollapse" />
            	    </run>
            	</groups>
            	<classes>
            	    <class name="com.redhat.qe.ipa.sahi.tests.automount.AutomountTests" />
            	</classes>
    </test>
	
    <listeners>        
  	             <listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
    </listeners>
	
</suite>
