<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPAHostgroupTestSuite">	
	<test name="Host Group Tests">
		<packages>
		    <package name="com.redhat.qe.ipa.sahi.*" />
		</packages>
		<groups>
			<run>
			    <include name="setup" />
			    <include name="addHostGroupTests" />	
				<include name="deleteHostGroupTests" />
				<include name="addAndAddAnotherHostGroupTests" />
			    <include name="deleteMultipleHostGroupTests" />
			    <include name="addAndEditHostGroupSettingsTest" />
			    <include name="AddHostMembersTests" />
			    <include name="hostGroupMemberofTest" />
			    <include name="hostMemberofTest" />
			    <include name="cancelAddMembersTest" />
			    <include name="cancelRemoveMembersTest" />
			    <include name="removeHostMembersTest" />
			    <include name="removeHostGroupMembersTest" />
			    <include name="invalidCharHostGroupAddTests" />
			    <include name="invalidHostGroupAddTests" />
			    <include name="invalidHostGroupModifyTests" />
			    <include name="invalidHostGroupModifyUndoTests" />
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.hostgroup.HostgroupTests" />
		</classes>
	</test>
	
	<listeners>        
  		<listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
	</listeners>
	
</suite>