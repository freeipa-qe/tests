<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPAGroupTestSuite">	
    <test name="Group Tests">
        <packages>
            <package name="com.redhat.qe.ipa.sahi.*" />
        </packages>
        <groups>
            <run> 
                <include name="setup" />
                <include name="init" />
                <include name="addGroup" />  
                <include name="addGroup_negative" /> 
                <include name="modifyGroup" />
                <include name="modifyGroup_enrolluser" />
                <include name="modifyGroup_enrollgroup" />
                <include name="modifySettings" />
                <include name="modifyGroup_settings" />
                <include name="modifyGroup_settings_negative" /> 
                <include name="netgroup" />
	           <include name="modifyGroup_netgroup_prepare" />
	           <include name="modifyGroup_netgroup_add" />
	           <include name="modifyGroup_netgroup_delete" />
	           <include name="modifyGroup_netgroup_cleanup" /> 
	           <include name="role" />
	           <include name="modifyGroup_role_add" />
	           <include name="modifyGroup_role_delete" /> 
	           <include name="hbac" />
	           <include name="modifyGroup_hbac_prepare" />
	           <include name="modifyGroup_hbac_add" />
	           <include name="modifyGroup_hbac_delete" />
	           <include name="modifyGroup_hbac_cleanup" /> 
	           <include name="sudo" />
	           	<include name="modifyGroup_sudo_prepare" />
	           <include name="modifyGroup_sudo_add" />
	           <include name="modifyGroup_sudo_delete" />
	           <include name="modifyGroup_sudo_cleanup" />  
	           <include name="bugverification" />
                <include name="deleteGroup" />
            </run>
        </groups>
        <classes>
            <class name="com.redhat.qe.ipa.sahi.tests.group.GroupTests" />
        </classes>
    </test> 
    <listeners>        
        <listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
    </listeners> 
</suite>
