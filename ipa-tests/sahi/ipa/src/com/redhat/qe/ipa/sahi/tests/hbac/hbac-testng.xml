<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPAHBACTestSuite">	
	<test name="HBAC Tests">
		<packages>
		    <package name="com.redhat.qe.ipa.sahi.*" />
		</packages>
		<groups>
			<run>
			    <include name="setup" />
			    <include name="hbacRuleAddTests" />
			    <include name="hbacRuleCancelAddTests" />
			    <include name="hbacRuleAddAndEditTests" />
			    <include name="hbacRuleCancelDeleteTests" />
			    <include name="hbacRuleAddAndAddAnotherTests" />			    
			    <include name="hbacRuleDeleteTests" />
			    <include name="chooseHBACRulesMultipleDeleteTests" />			   
			    <include name="hbacRuleMultipleDeleteTests" />
				<!--
				<include name="teardown"/>
				-->
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.hbac.HBACTests" />
		</classes>
	</test>
	
	<listeners>        
  		<listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
	</listeners>
	
</suite>