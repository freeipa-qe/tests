<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPAServiceTestSuite">	
	<test name="Service Tests">
		<packages>
		    <package name="com.redhat.qe.ipa.sahi.*" />
		</packages>
		<groups>
			<run>
			    <include name="setup" />
			    <include name="serviceAddTests" /> 
			    <include name="deleteMultipleServiceTests" />
				<include name="customServiceAddTests" />
				<include name="deleteSingleServiceTests" />
				<include name="forceServiceAddTests" /> 
				<include name="invalidserviceAddTests" />
				<include name="serviceSearchTests" />
			   <!-- Tests below fail on Windows due to Bug 831227 -->
			    <include name="serviceAddCertificateTests" />
			    <include name="serviceHoldCertificateTests" />
			    <include name="serviceRestoreCertificateTests" />
			    <include name="serviceRevokeCertificateTests" /> 
			    <include name="serviceAddManagedByHostTests" />
			    <include name="serviceRemoveManagedByHostTests" />
				<include name="serviceGetKeytabTests" />
				<include name="serviceRemoveKeytabTests" /> 				 
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.service.ServiceTests" />
		</classes>
	</test>
	
	<listeners>        
  		<listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
	</listeners>
	
</suite>