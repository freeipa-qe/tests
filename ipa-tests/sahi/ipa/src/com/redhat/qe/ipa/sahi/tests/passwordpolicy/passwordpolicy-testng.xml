<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPAPasswordPolicyTestSuite">	
 	<test name="IPA Password Policy Tests" preserve-order="true">
    <packages>
     	 <package name="com.redhat.qe.ipa.sahi.*" />
    </packages>
    <groups>
      <run>
        	<include name="setup" />
        	<include name="init" />   
        	<include name="addPolicy" />
	     	<include name="modifyPolicy" />
	    	<include name="deletePolicy" />
	    	<include name="cleanup" />
        </run>
      </groups>
      <classes>
        	<class name="com.redhat.qe.ipa.sahi.tests.passwordpolicy.PasswordPolicyTests" />
      </classes>
    </test> 
    <listeners>        
        	<listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
    </listeners> 
</suite>
