<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPASudoTestSuite">	
	<test name="Sudo Tests">
		<packages>
		     <package name="com.redhat.qe.ipa.sahi.*" />
		</packages>
		<groups>
			<run>
			    <include name="setup" />
			    <include name="sudoRuleAddTests" />	
			    <include name="sudoRuleAddAndAddAnotherTests" />
			    <include name="sudoRuleCancelAddTests" />
			    <include name="sudoRuleAddAndEditTests" />
			    <include name="sudoRuleGeneralSettingsTests" />		    
			    <include name="sudoRuleOptionsSettingsTests" />
			    <include name="sudoRuleUserCategorySettingsTests" />
			    <include name="sudoRuleHostCategorySettingsTests" />
			    <include name="sudoRuleCommandCategorySettingsTests" />
			    <include name="sudoRuleRunAsUserCategorySettingsTests" />
			    <include name="sudoRuleRunAsGroupCategorySettingsTests" />
			    <include name="invalidSudoRuleAddTests" />
			    <include name="sudoRuleRequiredFieldAddTests" />
			    <include name="sudoRuleExpandCollapseTests" />
			    <include name="sudoRuleSearchTests" />
			    <include name="sudoRuleDeleteTests" />
			    <include name="sudoRuleMultipleDeleteTests" />
			</run>
		</groups>
	</test>

		
	<test name="Sudo Command Tests">
		<groups>
			<run>		   
			    <include name="sudoCommandAddTests" />
			    <include name="sudoCommandCancelAddTests" />
				<include name="sudoCommandDelTests" />
				<include name="sudoCommandCancelDelTests" />
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.sudo.SudoCommandTests" />
		</classes>
	</test>

		
	<test name="Sudo Command Group Tests">
	   <packages>
		     <package name="com.redhat.qe.ipa.sahi.*" />
		</packages>
		<groups>
			<run>	
			    <include name="setup" />
				<include name="sudoruleCommandGroupAddTests" />
				<include name="sudoCommandGroupCancelAddTests" />
				<include name="invalidSudoCommanGroupAddTests" />
				<include name="sudoCommandGroupAddAndAddAnotherTests" />
				<include name="sudoCommandGroupMultipleDeleteTests" />
				<include name="invalidSudoCommanGroupAddRequiredFieldTests" />
				<include name="invalidSudoCommanGroupModifyTests" />
				<include name="sudoruleCommandGroupCancelDelTests" />
				<include name="sudoruleCommandGroupDelTests" />
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.sudo.SudoCommandGroupTests" />
		</classes>
	</test>

	<listeners>        
  		<listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
	</listeners>
	
</suite>
