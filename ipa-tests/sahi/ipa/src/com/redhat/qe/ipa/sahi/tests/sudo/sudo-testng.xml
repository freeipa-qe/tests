<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPASudoTestSuite">	
	<test name="Sudo Tests">
		<packages>
		     <package name="com.redhat.qe.ipa.sahi.*" />
		</packages>
		<groups>
			<run>
			    <include name="setup" />
			    <include name="sudoruleAddTests" />
			    <include name="sudoruleEditTests" />				
				<include name="sudoruleDeleteTests" />
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.sudo.SudoTests" />
		</classes>
	</test>
	
		
	<test name="Sudo Command Tests">
		<groups>
			<run>
			   <!-- Sudo Commands --> 			   
			    <include name="sudoruleCommandAddTests" />
				<include name="sudoruleCommandDelTests" />
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.sudo.SudoCommandTests" />
		</classes>
	</test>
	
		
	<test name="Sudo Command Group Tests">
		<groups>
			<run>
			   <!-- Sudo Command Groups --> 
			   <!--
				<include name="sudoruleCommandGroupAddTests" />
				<include name="sudoruleCommandGroupDelTests" />
				-->
			</run>
		</groups>
		<classes>
		    <class name="com.redhat.qe.ipa.sahi.tests.sudo.SudoCommandTests" />
		</classes>
	</test>
	
	<listeners>        
  		<listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
	</listeners>
	
</suite>
