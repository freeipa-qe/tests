# This function will set the default values for the variables needed.
#
ipagroupstress_default()
{
	if [ -z "$ipagroupstressRunIt" ]
	then
		ipagroupstressRunIt=n
	fi
}

# This function will ask the user for more information/choices if needed.
#
ipagroupstress_ask()
{

	sav_ipagroupstressRunIt=$ipagroupstressRunIt
	echo "    Execute ipagroupstress test suite [$ipagroupstressRunIt] ? \c"
	read rsp
	case $rsp in
		"")	ipagroupstressRunIt=$sav_ipagroupstressRunIt	;;
		y|Y)	
			ipagroupstressRunIt=y
			;;
		*)	ipagroupstressRunIt=n		;;
	esac

}

# This function will print the user's choices (aka variables)
#
ipagroupstress_print()
{
	echo "    Execute ipagroupstress test suite        : $ipagroupstressRunIt"
}

# This function will echo in shell's format the user's choices
# It is the calling function that will redirect the output to
# the saved config file.
#
ipagroupstress_save()
{
	echo "ipagroupstressRunIt=$ipagroupstressRunIt"
}

# This function will check that the test suite may be executed
# It may also perform some kind of pre-configuration of the machine.
# This function should "exit 1" if there is problem.
#
ipagroupstress_check()
{
	kgb=kgb
}

# This function will startup/initiate the test suite
#
ipagroupstress_startup()
{
:
}

# This function will run the test suite
#
ipagroupstress_run()
{
	if [ $ipagroupstressRunIt = n ]
	then
		return
	fi
	echo "ipagroupstress run..."
	echo "$TET_ROOT/$MainTccName -e -s $TET_ROOT/testcases/IPA/stress/ipagroupstress/tet_scen -x $TET_ROOT/testcases/IPA/tetexecpl.cfg $TET_ROOT/testcases/IPA/stress/ipagroupstress ipagroupstress"

	$TET_ROOT/$MainTccName \
		-e -s $TET_ROOT/testcases/IPA/stress/ipagroupstress/tet_scen \
		-x $TET_ROOT/testcases/IPA/tetexecpl.cfg \
		$TET_ROOT/testcases/IPA/stress/ipagroupstress \
		ipagroupstress > $MainTmpDir/ipagroupstress.run.out 2>&1
	echo ""
	echo "ipagroupstress run $MainTmpDir/ipagroupstress.run.out"
	echo ""
	cat $MainTmpDir/ipagroupstress.run.out
	echo ""
	main_analyze "ipagroupstress run" `grep "tcc: journal file is" $MainTmpDir/ipagroupstress.run.out | awk '{print $5}'` $MainTmpDir/ipagroupstress.run.out
	MainReportFiles="$MainReportFiles $MainTmpDir/ipagroupstress.run.out"

	Gfile="$TET_TMP_DIR/global_src_`uname -n`"
	rm -f $Gfile
}

# This function will cleanup after the test suite execution
#
ipagroupstress_cleanup()
{
:
}


