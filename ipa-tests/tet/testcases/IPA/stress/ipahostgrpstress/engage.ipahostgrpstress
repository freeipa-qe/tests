# This function will set the default values for the variables needed.
#
ipahostgrpstress_default()
{
	if [ -z "$ipahostgrpstressRunIt" ]
	then
		ipahostgrpstressRunIt=n
	fi
}

# This function will ask the user for more information/choices if needed.
#
ipahostgrpstress_ask()
{

	sav_ipahostgrpstressRunIt=$ipahostgrpstressRunIt
	echo "    Execute ipahostgrpstress test suite [$ipahostgrpstressRunIt] ? \c"
	read rsp
	case $rsp in
		"")	ipahostgrpstressRunIt=$sav_ipahostgrpstressRunIt	;;
		y|Y)	
			ipahostgrpstressRunIt=y
			;;
		*)	ipahostgrpstressRunIt=n		;;
	esac

}

# This function will print the user's choices (aka variables)
#
ipahostgrpstress_print()
{
	echo "    Execute ipahostgrpstress test suite        : $ipahostgrpstressRunIt"
}

# This function will echo in shell's format the user's choices
# It is the calling function that will redirect the output to
# the saved config file.
#
ipahostgrpstress_save()
{
	echo "ipahostgrpstressRunIt=$ipahostgrpstressRunIt"
}

# This function will check that the test suite may be executed
# It may also perform some kind of pre-configuration of the machine.
# This function should "exit 1" if there is problem.
#
ipahostgrpstress_check()
{
	kgb=kgb
}

# This function will startup/initiate the test suite
#
ipahostgrpstress_startup()
{
:
}

# This function will run the test suite
#
ipahostgrpstress_run()
{
	if [ $ipahostgrpstressRunIt = n ]
	then
		return
	fi
	echo "ipahostgrpstress run..."
	echo "$TET_ROOT/$MainTccName -e -s $TET_ROOT/testcases/IPA/stress/ipahostgrpstress/tet_scen -x $TET_ROOT/testcases/IPA/tetexecpl.cfg $TET_ROOT/testcases/IPA/stress/ipahostgrpstress ipahostgrpstress"

	$TET_ROOT/$MainTccName \
		-e -s $TET_ROOT/testcases/IPA/stress/ipahostgrpstress/tet_scen \
		-x $TET_ROOT/testcases/IPA/tetexecpl.cfg \
		$TET_ROOT/testcases/IPA/stress/ipahostgrpstress \
		ipahostgrpstress > $MainTmpDir/ipahostgrpstress.run.out 2>&1
	echo ""
	echo "ipahostgrpstress run $MainTmpDir/ipahostgrpstress.run.out"
	echo ""
	cat $MainTmpDir/ipahostgrpstress.run.out
	echo ""
	main_analyze "ipahostgrpstress run" `grep "tcc: journal file is" $MainTmpDir/ipahostgrpstress.run.out | awk '{print $5}'` $MainTmpDir/ipahostgrpstress.run.out
	MainReportFiles="$MainReportFiles $MainTmpDir/ipahostgrpstress.run.out"

	Gfile="$TET_TMP_DIR/global_src_`uname -n`"
	rm -f $Gfile
}

# This function will cleanup after the test suite execution
#
ipahostgrpstress_cleanup()
{
:
}


