#ident "%W% %E%"
#
#	File name: run.ipahoststress
#
#	This file contains the operations specific to the ipahoststress tests.
#	It is targetted to be included by the main script "run" and not be be 
#	used alone.
#
#	Replace the "xyz" by your name (e.g. "schema") and "Xyz" by your
#	name (e.g. "Schema").
#
#
#	History
# -----------------------------------------------------------------------------
# dd/mm/yy | Author  	  | Comments
# -----------------------------------------------------------------------------
# 05/22/09 | JGalipea     | Creation
# -----------------------------------------------------------------------------

# This function will set the default values for the variables needed.
#
ipahoststress_default()
{
	if [ -z "$ipahoststressRunIt" ]
	then
		ipahoststressRunIt=n
	fi
}

# This function will ask the user for more information/choices if needed.
#
ipahoststress_ask()
{

	sav_ipahoststressRunIt=$ipahoststressRunIt
	echo "    Execute ipahoststress test suite [$ipahoststressRunIt] ? \c"
	read rsp
	case $rsp in
		"")	ipahoststressRunIt=$sav_ipahoststressRunIt	;;
		y|Y)	
			ipahoststressRunIt=y
			;;
		*)	ipahoststressRunIt=n		;;
	esac

}

# This function will print the user's choices (aka variables)
#
ipahoststress_print()
{
	echo "    Execute ipahoststress test suite        : $ipahoststressRunIt"
}

# This function will echo in shell's format the user's choices
# It is the calling function that will redirect the output to
# the saved config file.
#
ipahoststress_save()
{
	echo "ipahoststressRunIt=$ipahoststressRunIt"
}

# This function will check that the test suite may be executed
# It may also perform some kind of pre-configuration of the machine.
# This function should "exit 1" if there is problem.
#
ipahoststress_check()
{
	kgb=kgb
}

# This function will startup/initiate the test suite
#
ipahoststress_startup()
{
:
}

# This function will run the test suite
#
ipahoststress_run()
{
	if [ $ipahoststressRunIt = n ]
	then
		return
	fi
	echo "ipahoststress run..."
	echo "$TET_ROOT/$MainTccName -e -s $TET_ROOT/testcases/IPA/stress/ipahoststress/tet_scen -x $TET_ROOT/testcases/IPA/tetexecpl.cfg $TET_ROOT/testcases/IPA/stress/ipahoststress ipahoststress"

	$TET_ROOT/$MainTccName \
		-e -s $TET_ROOT/testcases/IPA/stress/ipahoststress/tet_scen \
		-x $TET_ROOT/testcases/IPA/tetexecpl.cfg \
		$TET_ROOT/testcases/IPA/stress/ipahoststress \
		ipahoststress > $MainTmpDir/ipahoststress.run.out 2>&1
	echo ""
	echo "ipahoststress run $MainTmpDir/ipahoststress.run.out"
	echo ""
	cat $MainTmpDir/ipahoststress.run.out
	echo ""
	main_analyze "ipahoststress run" `grep "tcc: journal file is" $MainTmpDir/ipahoststress.run.out | awk '{print $5}'` $MainTmpDir/ipahoststress.run.out
	MainReportFiles="$MainReportFiles $MainTmpDir/ipahoststress.run.out"

	Gfile="$TET_TMP_DIR/global_src_`uname -n`"
	rm -f $Gfile
}

# This function will cleanup after the test suite execution
#
ipahoststress_cleanup()
{
:
}


