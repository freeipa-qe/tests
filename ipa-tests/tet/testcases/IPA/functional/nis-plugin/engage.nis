# This function will set the default values for the variables needed.
#
nis_default()
{
	if [ -z "$nisRunIt" ]
	then
		nisRunIt=n
	fi
}

# This function will ask the user for more information/choices if needed.
#
nis_ask()
{

	sav_nisRunIt=$nisRunIt
	echo "    Execute nis test suite [$nisRunIt] ? \c"
	read rsp
	case $rsp in
		"")	nisRunIt=$sav_nisRunIt	;;
		y|Y)	
			nisRunIt=y
			;;
		*)	nisRunIt=n		;;
	esac

}

# This function will print the user's choices (aka variables)
#
nis_print()
{
	echo "    Execute nis test suite        : $nisRunIt"
}

# This function will echo in shell's format the user's choices
# It is the calling function that will redirect the output to
# the saved config file.
#
nis_save()
{
	echo "nisRunIt=$nisRunIt"
}

# This function will check that the test suite may be executed
# It may also perform some kind of pre-configuration of the machine.
# This function should "exit 1" if there is problem.
#
nis_check()
{
	kgb=kgb
}

# This function will startup/initiate the test suite
#
nis_startup()
{
:
}

# This function will run the test suite
#
nis_run()
{
	if [ $nisRunIt = n ]
	then
		return
	fi
	echo "nis run..."
	echo "$TET_ROOT/$MainTccName -e -s $TET_ROOT/testcases/IPA/functional/nis-plugin/tet_scen -x $TET_ROOT/testcases/IPA/tetexecpl.cfg $TET_ROOT/testcases/IPA/functional/nis-plugin nis"

	(
	$TET_ROOT/$MainTccName \
		-e -s $TET_ROOT/testcases/IPA/functional/nis-plugin/tet_scen \
		-x $TET_ROOT/testcases/IPA/tetexecpl.cfg \
		$TET_ROOT/testcases/IPA/functional/nis-plugin \
		nis > $MainTmpDir/nis.run.out 2>&1
	)&
	EngageTimer $! 1200 120 # wait 1200 sec before kill, then 1200 until kill -9
	echo ""
	echo "nis run $MainTmpDir/nis.run.out"
	echo ""
	cat $MainTmpDir/nis.run.out
	echo ""
	main_analyze "nis run" `grep "tcc: journal file is" $MainTmpDir/nis.run.out | awk '{print $5}'` $MainTmpDir/nis.run.out
	MainReportFiles="$MainReportFiles $MainTmpDir/nis.run.out"

	Gfile="$TET_TMP_DIR/global_src_`uname -n`"
	rm -f $Gfile
}

# This function will cleanup after the test suite execution
#
nis_cleanup()
{
:
}


