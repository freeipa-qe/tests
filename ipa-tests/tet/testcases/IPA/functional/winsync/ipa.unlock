#!/bin/sh


h=$1
start=$2
end=$3
echo redhat123 | kinit admin

if [ -z $h ]
then
	echo "pick default: header letter $h"
	h="z"
fi

if [ -z $start ]
then
	echo "pick default: starting uid=100"
	start=100
fi

if [ -z $end ]
then
	echo "pick default: ending uid=120"
	end=120
fi

echo "unlocking..."
echo redhat123 | kinit admin

for (( i = $start ; i<= $end ; i++ ))
do
	name=$h$i
	ipa-lockuser --unlock $name
done

echo "finished unlocking . show one user to prove it "
echo "=========== user [$h $end] =================="
ipa-finduser -a $h$end
echo "============================================="
echo ""


