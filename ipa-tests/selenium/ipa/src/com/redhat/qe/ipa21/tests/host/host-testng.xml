<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPAHostTestSuite">
	
	<test name="Start Host Tests">
		<packages>
		    <package name="com.redhat.qe.ipa.base" />
		    <package name="com.redhat.qe.ipa21" />
		</packages>
		<groups>
			<run>
			    <include name="setup" />
			    <include name="init" />
				<include name="hostAddTests" />
				<include name="hostEditTests" />
			</run>
		</groups>
		<classes>		    
		    <class name="com.redhat.qe.ipa21.tests.host.HostTests" />
		</classes>
	</test>
	
	<listeners>        
  		<listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
	</listeners>

</suite>