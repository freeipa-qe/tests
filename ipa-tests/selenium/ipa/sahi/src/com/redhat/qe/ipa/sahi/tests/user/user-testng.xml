<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="IPAUserTestSuite">
	<test name="Start User Tests">
		<packages>
		    <package name="com.redhat.qe.ipa.sahi.base" />
		    <package name="com.redhat.qe.ipa.sahi.tests" />
		</packages>
		<groups>
			<run>
			    <include name="setup" />
			    <include name="init" />
			    <!--
				<include name="userAddTests" />
				<include name="userEditTests" />
				<include name="userDeleteTests" />
				-->
				<include name="teardown"/>
			</run>
		</groups>
		<classes>	    
		    <class name="com.redhat.qe.ipa.sahi.tests.user.UserTests" />
		</classes>
	</test>
	
	<listeners>        
  		<listener class-name="com.redhat.qe.auto.testng.TestNGListener" />	
	</listeners>
	
</suite>