<job>
	<whiteboard>
		ipa-server x86_64
	</whiteboard>
	<recipeSet>
		<recipe whiteboard="ipa server on x86_64 on ipaqa64vma">
			<distroRequires>
				<and>
					<distro_family op="=" value="Fedora13"/>
					<distro_method op="=" value="nfs"/>
					<distro_tag op="=" value="STABLE"/>
					<distro_arch op="=" value="x86_64"/>
				</and>
			</distroRequires>
			<hostRequires>
				<and>
					<hostname op="=" value="ipaqa64vma.idm.lab.bos.redhat.com"/>
				</and>
			</hostRequires>
			<repos/>
			<task name="/distribution/install" role="STANDALONE">
				<params/>
			</task>
			<task name="/distribution/pkginstall" role="STANDALONE">
				<params>
					<param name="PKGARGNAME" value="expect"/>
				</params>
			</task>
			<task name="/CoreOS/ipa-server/acceptance/install" role="STANDALONE">
				<params/>
			</task>
			<task name="/CoreOS/ipa-server/acceptance/uninstall" role="STANDALONE">
				<params/>
			</task>

		</recipe>
	</recipeSet>
</job>

