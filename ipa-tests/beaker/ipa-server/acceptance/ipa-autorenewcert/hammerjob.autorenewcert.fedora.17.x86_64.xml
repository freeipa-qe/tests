<job>
	<whiteboard>
		ipa-server - cert automatic renew (rhel6.4 release)
	</whiteboard>
	<notify>
        <cc>yzhang@redhat.com</cc>
    </notify>
	<recipeSet>
		<recipe whiteboard="ipa server - cert automatic renew">
            <repos>
                <repo name="freeipa_fedora17" url="http://jdennis.fedorapeople.org/ipa-devel/fedora/17/x86_64/os/" />
                <repo name="fc17-mv-updates" url="http://alpha.dsdev.sjc.redhat.com/export/archives/rhel/fc17-updates/x86_64/"/>
            </repos>
			<distroRequires>
				<and>
			        <distro_family op="=" value="Fedora17"/>
                    <distro_virt op="=" value=""/>
                    <distro_variant op="=" value="Fedora"/>
                    <distro_name op="=" value="Fedora-17"/>
                    <distro_arch op="=" value="x86_64"/>	
				</and>
				<distro_virt op="=" value=""/>
			</distroRequires>

			<hostRequires>
			</hostRequires>

			<task name="/distribution/install" role="STANDALONE">
				<params/>
			</task>
			<task name="/distribution/pkginstall" role="STANDALONE">
				<params>
				<param name="PKGARGNAME" value="expect"/>
				</params>
			</task>
            <task name="/CoreOS/ipa-server/rhel70-ipa/shared" role="STANDALONE">
                <params/>
            </task>

			<task name="/CoreOS/ipa-server/rhel70-ipa/acceptance/quickinstall" role="MASTER">
				<params/>
			</task>
			<task name="/CoreOS/ipa-server/rhel70-ipa/acceptance/ipa-autorenewcert" role="MASTER">
				<params>
					<param name="KILLTIMEOVERRIDE" value="8789333"/>
				</params>
			</task>

		</recipe>
	</recipeSet>
</job>

