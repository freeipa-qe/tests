#!/usr/bin/expect

set username [lindex $argv 0]
set password [lindex $argv 1]
set newpassword [lindex $argv 2]

set timeout 5
set send_slow {1 .1}

spawn ipa passwd $username
expect "Current Password: "
send -s -- "$password\r"

expect "New Password: "
send -s -- "$newpassword\r"

expect "Enter New Password again to verify: "
send -s -- "$newpassword\r"

expect eof
