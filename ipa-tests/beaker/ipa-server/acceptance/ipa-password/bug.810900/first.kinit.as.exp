#!/usr/bin/expect

set username [lindex $argv 0]
set password [lindex $argv 1]
set newpw    [lindex $argv 2]

set timeout 5
set send_slow {1 .1}
spawn /usr/bin/kinit $username
expect "Password for*: "
send -s -- "$password\r"

expect "Enter new password: "
send -s -- "$newpw\r"

expect "Enter it again: "
send -s -- "$newpw\r"

expect eof

